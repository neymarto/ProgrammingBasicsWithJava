package FirstStepsInCodingExercise;

import java.util.Scanner;

public class FoodDelivery {

    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        double chickenMenu = Double.parseDouble(scanner.nextLine());
        double fishMenu = Double.parseDouble(scanner.nextLine());
        double vegetarianMenu = Double.parseDouble(scanner.nextLine());

        double chickenPrice = 10.35;
        double fishPrice = 12.40;
        double vegetarianPrice = 8.15;

        double delivery = 2.50;

        double sum = (chickenMenu * chickenPrice) + (fishMenu * fishPrice) + (vegetarianMenu * vegetarianPrice);
        double dessert = sum * 0.20;
        double total = sum + dessert + delivery;

        System.out.println(total);
    }
}
